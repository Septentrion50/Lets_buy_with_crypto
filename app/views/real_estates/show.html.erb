<div class="container d-flex flex-column my-5">
    <h1><%= @real_estate.name %></h1>
    <article class="row">
        <div class="col-12 col-sm-6 col-md-8">
            <%= render :partial => "shared/small_carousel", :object => @real_estate %>
            <%= render :partial => "shared/picto_presentation" %>
            <%= render :partial => "shared/get_housecoin", :object => @button %>
            <%= @real_estate.description %>
            <%= render 'mapbox_show' %>
        </div>
        <div class="d-flex flex-column col-12 col-sm-6 col-md-4">
            <%= render :partial => "shared/property_type", :object => @text %>
        </div>
    </article>
    <div class="row">
            <%= render :partial => "shared/pictures_group", :object => @imgArr %>
    <div class="row">
            <%= render :partial => "shared/newsletter" %>
    </div>
</div>