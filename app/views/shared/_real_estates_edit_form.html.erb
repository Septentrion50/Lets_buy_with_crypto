<%= form_with url: @path.url, method: :put do |form|%>
    <div class="form-group mt-3">
        <%= form.label :pictures %>
        <%= form.file_field :pictures, multiple: true, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
        <%= form.label "Name" %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
        <%= form.label "Price" %>
        <%= form.text_field :price, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
        <%= form.label "Description" %>
        <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
        <%= form.label "Address" %>
        <%= form.text_field :adress, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
        <%= form.label "Zipcode" %>
        <%= form.text_field :zipcode, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
        <%= form.label "City" %>
        <%= form.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group mt-4">
        <%= form.submit "Save", class: "btn btn-primary me-1" %>
        <%= link_to "Dashboard", admin_real_estates_path, class: "btn btn-secondary" %>
    </div>
<%end%>