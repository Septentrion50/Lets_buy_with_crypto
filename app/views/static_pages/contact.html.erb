<% 
    @dataImage = {
        url: "modern_house.jpg",
        title: "Contact Us",
        text: "We will get back to you asap!"
    }
%>
<%= render :partial => "shared/full_image", :object => @dataImage %>

<section class="static-page-container container my-5">
    <div class="row">
        <div class="col-12 col-sm-6">
            <div class="mb-4">
                <h4>Address</h4>
                <div>8 avenue du général du fort</div>
                <div>Coins</div>
                <div>PAC 07760</div>
            </div>
            <div class="mb-4">
                <h4>Telephone</h4>
                <div>
                    <i class="fas fa-phone-alt me-1"></i>
                    <span>202-555-0183</span>
                </div>
            </div>
            <div class="mb-4">
                <h4>Email</h4>
                <div>
                    <i class="fas fa-envelope me-1"></i>
                    <span>yabdous@hotmail.red</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6">
            <div class="mw-form custom-form">
                <h4>Send your message</h4>
                <%#= form_with url: real_estates_path do |form| %>
                    <div class="form-group mt-3">
                        <%#= form.label "Name" %>
                        <%#= form.text_field :name, class: "form-control" %>
                    </div>
                    <div class="form-group mt-3">
                        <%#= form.label "Email" %>
                        <%#= form.text_field :email, class: "form-control" %>
                    </div>
                    <div class="form-group mt-3">
                        <%#= form.label "Message" %>
                        <%#= form.text_area :message, class: "form-control" %>
                    </div>
                    <div class="form-group mt-4">
                        <%#= form.submit "Save", class: "btn btn-primary me-1" %>
                        <%#= link_to "Dashboard", admin_real_estates_path, class: "btn btn-secondary" %>
                    </div>
                <%# end %>
            </div>
        </div>
    </div>
</section>
